<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopDetailsActivity">

    <TextView
        android:id="@+id/shopNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop name"
        android:textSize="@dimen/_17font_mdp"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_5mdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/deliveryFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Fee"
        app:layout_constraintTop_toBottomOf="@id/shopNameTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_13font_mdp"
        android:textColor="@android:color/holo_red_dark"/>



    <TextView
        android:id="@+id/totalOrdersTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deliveryFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14font_mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:text="Total Orders"/>

    <TextView
        android:id="@+id/totalOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="256"
        app:layout_constraintStart_toEndOf="@id/totalOrdersTxt"
        android:layout_marginStart="@dimen/_5mdp"
        android:textSize="@dimen/_14font_mdp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/totalOrdersTxt"
        android:textColor="@color/colorRed"/>

    <TextView
        android:id="@+id/completedTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Completed"
        android:textSize="@dimen/_14font_mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalOrdersTxt"/>

    <TextView
        android:id="@+id/completedOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        app:layout_constraintStart_toEndOf="@id/completedTxt"
        app:layout_constraintTop_toTopOf="@id/completedTxt"
        android:layout_marginStart="@dimen/_5mdp"
        android:textSize="@dimen/_14font_mdp"
        android:textColor="@color/colorRed"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cancelledTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cancelled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/completedTxt"
        android:textSize="@dimen/_14font_mdp"/>
    <TextView
        android:id="@+id/cancelledOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40"
        app:layout_constraintStart_toEndOf="@id/cancelledTxt"
        app:layout_constraintTop_toTopOf="@id/cancelledTxt"
        android:textSize="@dimen/_14font_mdp"
        android:textStyle="bold"
        android:textColor="@color/colorRed"
        android:layout_marginStart="@dimen/_5mdp"/>


    <TextView
        android:id="@+id/inProgressTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total In Progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancelledTxt"
        android:textSize="@dimen/_14font_mdp"/>
    <TextView
        android:id="@+id/inProgressOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22"
        app:layout_constraintStart_toEndOf="@id/inProgressTxt"
        app:layout_constraintTop_toTopOf="@id/inProgressTxt"
        android:textSize="@dimen/_14font_mdp"
        android:textStyle="bold"
        android:textColor="@color/colorRed"
        android:layout_marginStart="@dimen/_5mdp"/>


    <TextView
        android:id="@+id/inProTotalCostTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cost(In Progress)"
        app:layout_constraintTop_toBottomOf="@id/inProgressTxt"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/_15font_mdp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/totalCostInProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="230"
        app:layout_constraintTop_toTopOf="@id/inProTotalCostTxt"
        app:layout_constraintStart_toEndOf="@id/inProTotalCostTxt"
        android:textSize="@dimen/_15font_mdp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginStart="@dimen/_5mdp"/>

    <TextView
        android:id="@+id/cancelledCostTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cost(Cancelled)"
        app:layout_constraintTop_toBottomOf="@id/inProTotalCostTxt"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/_15font_mdp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/totalCostCancelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="350"
        app:layout_constraintTop_toTopOf="@id/cancelledCostTxt"
        app:layout_constraintStart_toEndOf="@id/cancelledCostTxt"
        android:textSize="@dimen/_15font_mdp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginStart="@dimen/_5mdp"/>
<TextView
        android:id="@+id/completedCostTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cost(Completed)"
        app:layout_constraintTop_toBottomOf="@id/cancelledCostTxt"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/_15font_mdp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/totalCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250"
        app:layout_constraintTop_toTopOf="@id/completedCostTxt"
        app:layout_constraintStart_toEndOf="@id/completedCostTxt"
        android:textSize="@dimen/_15font_mdp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginStart="@dimen/_5mdp"/>

    <TextView
        android:id="@+id/totalCostTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cost"
        app:layout_constraintTop_toBottomOf="@id/completedCostTxt"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/_15font_mdp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/totalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2503"
        app:layout_constraintTop_toTopOf="@id/totalCostTxt"
        app:layout_constraintStart_toEndOf="@id/totalCostTxt"
        android:textSize="@dimen/_15font_mdp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginStart="@dimen/_5mdp"/>

    <View
        android:id="@+id/viewOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/totalCost"
        android:layout_marginTop="@dimen/_5mdp"
        android:background="#f1eded"/>

    <TextView
        android:id="@+id/deliveryFeeComTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Fee(Completed):"
        android:textSize="@dimen/_15font_mdp"
        app:layout_constraintTop_toBottomOf="@id/viewOne"
        android:layout_marginTop="@dimen/_3mdp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/deliFeeForCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="240 Taka"
        app:layout_constraintTop_toTopOf="@id/deliveryFeeComTxt"
        app:layout_constraintStart_toEndOf="@id/deliveryFeeComTxt"
        android:textSize="@dimen/_15font_mdp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_5mdp"
        android:textColor="@android:color/holo_orange_dark"/>



</androidx.constraintlayout.widget.ConstraintLayout>