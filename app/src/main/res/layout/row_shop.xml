<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_1mdp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/_3mdp"
    app:contentPadding="@dimen/_5mdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shopIV"
            android:layout_width="@dimen/_70mdp"
            android:layout_height="@dimen/_70mdp"
            android:src="@drawable/impl1"
            app:civ_border_color="@android:color/holo_blue_light"
            app:civ_border_width="@dimen/_1mdp" />

        <TextView
            android:id="@+id/orderCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5mdp"
            android:background="@drawable/shape_circle_03"
            android:padding="@dimen/_5mdp"
            android:text="923453"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/nextIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_next_gray" />

        <TextView
            android:id="@+id/closedTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/nextIV"
            android:background="@drawable/shape_rect06"
            android:padding="@dimen/_5mdp"
            android:text="Closed"
            android:textColor="@color/colorRed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3mdp"
            android:layout_toStartOf="@id/nextIV"
            android:layout_toEndOf="@id/shopIV"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Shop Name"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Phone"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/addressTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Address"
                android:textColor="@color/black" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:numStars="5"
                android:progressBackgroundTint="@color/black"
                android:progressTint="@android:color/holo_blue_light" />


        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>